<Window x:Class="ReqDefineDocumentMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReqDefineDocumentMaker"
        mc:Ignorable="d"
        Title="要求仕様書作成ツール for Claude" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <!-- スタイル定義 -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#667eea"/>
            <Setter Property="Margin" Value="0,10,0,10"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
        </Style>

        <Style x:Key="OptionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Background" Value="{DynamicResource BackgroundSecondaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Background" Value="#667eea"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <!-- TextBox/TextAreaスタイル -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{DynamicResource BackgroundSecondaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        </Style>

        <!-- ComboBoxスタイル -->
        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{DynamicResource BackgroundSecondaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton Name="ToggleButton"
                                          Grid.Column="2"
                                          Focusable="false"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press"
                                          Background="{DynamicResource BackgroundSecondaryBrush}"
                                          BorderBrush="{DynamicResource BorderBrush}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="2" CornerRadius="4">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0" Margin="5,3,0,3" Content="{TemplateBinding Content}"/>
                                                <Path Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0 Z" Fill="{DynamicResource TextPrimaryBrush}"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter Name="ContentSite"
                                              IsHitTestVisible="False"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              Margin="5,3,23,3"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Left"
                                              TextElement.Foreground="{DynamicResource TextPrimaryBrush}"/>
                            <Popup Name="Popup"
                                   Placement="Bottom"
                                   IsOpen="{TemplateBinding IsDropDownOpen}"
                                   AllowsTransparency="True"
                                   Focusable="False"
                                   PopupAnimation="Slide">
                                <Grid Name="DropDown"
                                      SnapsToDevicePixels="True"
                                      MinWidth="{TemplateBinding ActualWidth}"
                                      MaxHeight="{TemplateBinding MaxDropDownHeight}">
                                    <Border Name="DropDownBorder"
                                            Background="{DynamicResource BackgroundSecondaryBrush}"
                                            BorderThickness="1"
                                            BorderBrush="{DynamicResource BorderBrush}"/>
                                    <ScrollViewer Margin="4,6,4,6" SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Grid>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ComboBoxItemスタイル -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Background" Value="{DynamicResource BackgroundSecondaryBrush}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Padding" Value="5,3"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#667eea"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ScrollViewerスタイル -->
        <Style TargetType="ScrollViewer">
            <Setter Property="Background" Value="{DynamicResource BackgroundPrimaryBrush}"/>
        </Style>

        <!-- TabControlスタイル -->
        <Style TargetType="TabControl">
            <Setter Property="Background" Value="{DynamicResource BackgroundPrimaryBrush}"/>
        </Style>

        <!-- TabItemスタイル -->
        <Style TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Background="{DynamicResource BackgroundSecondaryBrush}"
                                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1,1,1,0"
                                CornerRadius="4,4,0,0" Margin="2,0">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              Margin="10,5"
                                              TextElement.Foreground="{DynamicResource TextPrimaryBrush}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="{DynamicResource BackgroundPrimaryBrush}"/>
                                <Setter TargetName="Border" Property="BorderBrush" Value="#667eea"/>
                                <Setter TargetName="Border" Property="BorderThickness" Value="1,2,1,0"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <Border Grid.Row="0" Background="#667eea" Padding="20">
            <Grid>
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="要求仕様書作成ツール for Claude"
                               FontSize="24" FontWeight="Bold"
                               Foreground="White" HorizontalAlignment="Center"/>
                    <TextBlock Text="Claude に依頼するための要求仕様書を作成します"
                               FontSize="14" Foreground="White"
                               HorizontalAlignment="Center" Margin="0,5,0,0" Opacity="0.9"/>
                </StackPanel>

                <!-- ダークモード切り替えボタン -->
                <Button x:Name="ThemeToggleButton"
                        Click="ThemeToggleButton_Click"
                        Width="40" Height="40"
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="Transparent"
                        BorderBrush="White"
                        BorderThickness="2"
                        Cursor="Hand"
                        ToolTip="ダークモード切り替え">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="20">
                                <TextBlock x:Name="ThemeIcon" Text="🌙" FontSize="20"
                                           HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#33FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Border>

        <!-- メインコンテンツ -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- 入力フォームタブ -->
            <TabItem Header="要件入力">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- 基本情報 -->
                        <TextBlock Text="基本情報" Style="{StaticResource SectionHeaderStyle}"/>
                        <Separator Margin="0,0,0,10"/>

                        <!-- プロジェクト名 -->
                        <TextBlock Text="プロジェクト名" Style="{StaticResource LabelStyle}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="ProjectNameTextBox" Grid.Column="0" Margin="0,0,10,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                        Click="ProjectNameOmakase_Click"/>
                                <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                        Click="ProjectNameDiscuss_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- 概要/目的 -->
                        <TextBlock Text="概要/目的" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                        <TextBox x:Name="OverviewTextBox" Height="80" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                    Click="OverviewOmakase_Click"/>
                            <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                    Click="OverviewDiscuss_Click"/>
                        </StackPanel>

                        <!-- 対象ユーザー -->
                        <TextBlock Text="対象ユーザー" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TargetUserTextBox" Grid.Column="0" Margin="0,0,10,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                        Click="TargetUserOmakase_Click"/>
                                <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                        Click="TargetUserDiscuss_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- 技術要件 -->
                        <TextBlock Text="技術要件" Style="{StaticResource SectionHeaderStyle}" Margin="0,30,0,0"/>
                        <Separator Margin="0,0,0,10"/>

                        <!-- アプリケーション種類 -->
                        <TextBlock Text="アプリケーション種類" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="AppTypeComboBox" SelectionChanged="AppTypeComboBox_SelectionChanged">
                            <ComboBoxItem Content="選択してください" IsSelected="True"/>
                            <ComboBoxItem Content="CLIツール（コンソールアプリケーション）" Tag="CLI"/>
                            <ComboBoxItem Content="デスクトップアプリケーション" Tag="Desktop"/>
                            <ComboBoxItem Content="Webアプリケーション" Tag="Web"/>
                            <ComboBoxItem Content="その他" Tag="Other"/>
                        </ComboBox>
                        <TextBox x:Name="AppTypeOtherTextBox" Margin="0,5,0,0" Visibility="Collapsed"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                    Click="AppTypeOmakase_Click"/>
                            <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                    Click="AppTypeDiscuss_Click"/>
                        </StackPanel>

                        <!-- 使用言語 -->
                        <TextBlock Text="使用言語" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="LanguageTextBox" Grid.Column="0" Margin="0,0,10,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                        Click="LanguageOmakase_Click"/>
                                <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                        Click="LanguageDiscuss_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- フレームワーク/ライブラリ -->
                        <TextBlock Text="フレームワーク/ライブラリ" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="FrameworkTextBox" Grid.Column="0" Margin="0,0,10,0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                        Click="FrameworkOmakase_Click"/>
                                <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                        Click="FrameworkDiscuss_Click"/>
                            </StackPanel>
                        </Grid>

                        <!-- 開発環境 -->
                        <TextBlock Text="開発環境" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                        <TextBox x:Name="DevEnvironmentTextBox" Height="60" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                    Click="DevEnvironmentOmakase_Click"/>
                            <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                    Click="DevEnvironmentDiscuss_Click"/>
                        </StackPanel>

                        <!-- 本番環境 -->
                        <TextBlock Text="本番環境" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                        <ComboBox x:Name="ProdEnvironmentComboBox" SelectionChanged="ProdEnvironmentComboBox_SelectionChanged">
                            <ComboBoxItem Content="選択してください" IsSelected="True"/>
                            <ComboBoxItem Content="開発環境と同じ" Tag="SameAsDev"/>
                            <ComboBoxItem Content="個別に指定" Tag="Custom"/>
                        </ComboBox>
                        <TextBox x:Name="ProdEnvironmentTextBox" Height="60" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                 Margin="0,5,0,0" Visibility="Collapsed"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                    Click="ProdEnvironmentOmakase_Click"/>
                            <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                    Click="ProdEnvironmentDiscuss_Click"/>
                        </StackPanel>

                        <!-- 制約事項 -->
                        <TextBlock Text="制約事項" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                        <TextBox x:Name="ConstraintsTextBox" Height="60" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                    Click="ConstraintsOmakase_Click"/>
                            <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                    Click="ConstraintsDiscuss_Click"/>
                        </StackPanel>

                        <!-- 機能要件 -->
                        <TextBlock Text="機能要件" Style="{StaticResource SectionHeaderStyle}" Margin="0,30,0,0"/>
                        <Separator Margin="0,0,0,10"/>

                        <!-- 主要機能 -->
                        <TextBlock Text="主要機能" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="MainFeaturesTextBox" Height="100" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                    Click="MainFeaturesOmakase_Click"/>
                            <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                    Click="MainFeaturesDiscuss_Click"/>
                        </StackPanel>

                        <!-- 画面/UI要件 -->
                        <TextBlock Text="画面/UI要件" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                        <TextBox x:Name="UiRequirementsTextBox" Height="80" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                    Click="UiRequirementsOmakase_Click"/>
                            <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                    Click="UiRequirementsDiscuss_Click"/>
                        </StackPanel>

                        <!-- データ要件 -->
                        <TextBlock Text="データ要件" Style="{StaticResource LabelStyle}" Margin="0,15,0,5"/>
                        <TextBox x:Name="DataRequirementsTextBox" Height="80" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                    Click="DataRequirementsOmakase_Click"/>
                            <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                    Click="DataRequirementsDiscuss_Click"/>
                        </StackPanel>

                        <!-- その他 -->
                        <TextBlock Text="その他" Style="{StaticResource SectionHeaderStyle}" Margin="0,30,0,0"/>
                        <Separator Margin="0,0,0,10"/>

                        <!-- 参考資料 -->
                        <TextBlock Text="参考資料" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="ReferencesTextBox" Height="60" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <Button Content="お任せ" Style="{StaticResource OptionButtonStyle}"
                                    Click="ReferencesOmakase_Click"/>
                            <Button Content="別途議論" Style="{StaticResource OptionButtonStyle}"
                                    Click="ReferencesDiscuss_Click"/>
                        </StackPanel>

                        <!-- ボタン -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,20">
                            <Button Content="要求仕様書を生成" Style="{StaticResource PrimaryButtonStyle}"
                                    Click="GenerateButton_Click"/>
                            <Button Content="クリア" Padding="20,10" FontSize="14" Margin="10"
                                    Background="#6c757d" Foreground="White" BorderThickness="0"
                                    Click="ClearButton_Click"/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 出力タブ -->
            <TabItem Header="生成結果" x:Name="OutputTab" IsEnabled="False">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- 一次要求仕様書 -->
                    <StackPanel Grid.Row="0" Margin="0,0,0,10">
                        <DockPanel>
                            <TextBlock Text="一次要求仕様書（Markdown）" FontSize="16" FontWeight="Bold"
                                       Foreground="#667eea" DockPanel.Dock="Left"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                                <Button Content="クリップボードにコピー" Padding="10,5" Margin="5,0"
                                        Click="CopySpecButton_Click"/>
                                <Button Content="ファイル保存" Padding="10,5" Margin="5,0"
                                        Click="SaveSpecButton_Click"/>
                            </StackPanel>
                        </DockPanel>
                        <Separator Margin="0,5"/>
                    </StackPanel>
                    <TextBox Grid.Row="1" x:Name="SpecOutputTextBox" IsReadOnly="True"
                             TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas" Background="#f8f9fa" Margin="0,0,0,10"/>

                    <!-- Claude向けプロンプト -->
                    <StackPanel Grid.Row="2" Margin="0,10,0,10">
                        <DockPanel>
                            <TextBlock Text="Claude向けプロンプト" FontSize="16" FontWeight="Bold"
                                       Foreground="#667eea" DockPanel.Dock="Left"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right">
                                <Button Content="クリップボードにコピー" Padding="10,5" Margin="5,0"
                                        Click="CopyPromptButton_Click"/>
                                <Button Content="ファイル保存" Padding="10,5" Margin="5,0"
                                        Click="SavePromptButton_Click"/>
                            </StackPanel>
                        </DockPanel>
                        <Separator Margin="0,5"/>
                    </StackPanel>
                    <TextBox Grid.Row="3" x:Name="PromptOutputTextBox" IsReadOnly="True"
                             TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas" Background="#f8f9fa"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
